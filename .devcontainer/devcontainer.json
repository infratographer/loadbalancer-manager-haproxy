// Config reference, https://containers.dev/implementors/json_reference/
{
    "name": "loadbalancer-manager-haproxy",
    "dockerComposeFile":"docker-compose.yaml",
    "service": "dev",
    "runServices": ["dev", "haproxy"],
    "workspaceFolder": "/loadbalancer-manager-haproxy",
    "postCreateCommand": "install-nats",
    "postStartCommand": "nohup bash -c 'nats-server -c /home/vscode/nats.conf -l /tmp/nats-server.log &' > /tmp/nohup.out",
    "customizations": {
            // Configure properties specific to VS Code.
            "vscode": {
                    // Set *default* container specific settings.json values on container create.
                    "settings": {
                            "go.toolsManagement.checkForUpdates": "local",
                            "go.useLanguageServer": true,
                            "go.gopath": "/go"
                    },

                    // Add the IDs of extensions you want installed when the container is created.
                    "extensions": [
                            "golang.Go",
                            "ms-azuretools.vscode-docker"
                    ]
            }
    },
    "remoteUser": "vscode",
    "features": {
            "git": "latest"
    }

}
